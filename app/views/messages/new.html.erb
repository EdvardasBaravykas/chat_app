<%= turbo_include_tags %>
<%= turbo_frame_tag 'new_message', target: '_top' do %>
  <%= form_with(model: [ @message.room, @message ], remote: true) do |form| %>

    <div class="send">
      <div>
        <%= form.text_field :content, :class => "form-control", :placeholder => "Aa" %>
      </div>
      
      <div>
        <%= form.submit 'Send', id: 'submit', :class => "btn btn-primary" %> 
      </div>
    </div>

  <% end %>
<% end %>

<div class="back">
  <%= link_to 'Back', @message.room, :class => "btn btn-primary" %>
</div>